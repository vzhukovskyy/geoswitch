<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_config"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="rudiki.pp.ua.geoswitch.ConfigActivity">

    <TextView
        android:text="Latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/latitudeLabel"
        android:layout_alignBottom="@+id/latitudeEdit"
        android:layout_alignParentTop="true"
        android:textSize="18sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="left|center"
        android:layout_toLeftOf="@+id/longitudeEdit"
        android:layout_toStartOf="@+id/longitudeEdit" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:id="@+id/latitudeEdit"
        android:hint="Latitude"
        android:layout_toRightOf="@+id/latitudeLabel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:text="Longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/longitudeLabel"
        android:textSize="18sp"
        android:layout_below="@+id/latitudeLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/longitudeEdit"
        android:gravity="left|center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:ems="10"
        android:layout_below="@+id/latitudeEdit"
        android:layout_toRightOf="@+id/longitudeLabel"
        android:id="@+id/longitudeEdit"
        android:hint="Longitude"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Select on Map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mapButton"
        android:onClick="onMapClick"
        android:layout_below="@+id/longitudeEdit"
        android:layout_toRightOf="@+id/longitudeLabel"
        android:layout_toEndOf="@+id/longitudeLabel" />

    <TextView
        android:text="Radius"
        android:layout_height="wrap_content"
        android:id="@+id/radiusLabel"
        android:textSize="18sp"
        android:gravity="left|center_vertical"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/mapButton"
        android:layout_toStartOf="@+id/mapButton"
        android:layout_above="@+id/okButton"
        android:layout_below="@+id/mapButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/radiusEdit"
        android:hint="Radius in meters"
        android:layout_below="@+id/mapButton"
        android:layout_toRightOf="@+id/radiusLabel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Revert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancelButton"
        android:layout_weight="1"
        android:layout_alignBaseline="@+id/okButton"
        android:layout_alignBottom="@+id/okButton"
        android:layout_toRightOf="@+id/okButton"
        android:layout_toEndOf="@+id/okButton"
        android:onClick="onRevertClick" />

    <TextView
        android:text="Values have changed. Press Apply to accept."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/draftAlertLabel"
        android:layout_below="@+id/radiusLabel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="?attr/colorControlActivated"
        android:layout_marginTop="2dp" />

    <Button
        android:text="Apply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/okButton"
        android:layout_weight="1"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/radiusEdit"
        android:layout_toRightOf="@+id/radiusLabel"
        android:layout_toEndOf="@+id/radiusLabel"
        android:onClick="onApplyClick" />

</RelativeLayout>
