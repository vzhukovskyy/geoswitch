<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_trigger"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ua.pp.rudiki.geoswitch.ActivityTrigger">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Latitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/latitudeLabel"
            android:layout_alignBottom="@+id/latitudeEdit"
            android:layout_alignParentTop="true"
            android:textSize="14sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="left|center"
            android:layout_toLeftOf="@+id/longitudeEdit"
            android:layout_toStartOf="@+id/longitudeEdit" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:ems="10"
            android:layout_alignParentTop="true"
            android:id="@+id/latitudeEdit"
            android:hint="Latitude"
            android:layout_toRightOf="@+id/latitudeLabel"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="14sp" />

        <TextView
            android:text="Longitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/longitudeLabel"
            android:textSize="14sp"
            android:layout_below="@+id/latitudeLabel"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/longitudeEdit"
            android:gravity="left|center" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:ems="10"
            android:layout_below="@+id/latitudeEdit"
            android:layout_toRightOf="@+id/longitudeLabel"
            android:id="@+id/longitudeEdit"
            android:hint="Longitude"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="14sp" />

        <Button
            android:text="Select on Map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mapButton"
            android:onClick="onMapClick"
            android:layout_below="@+id/longitudeEdit"
            android:layout_toRightOf="@+id/longitudeLabel"
            android:layout_toEndOf="@+id/longitudeLabel" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/radiusEdit"
            android:hint="Radius in meters"
            android:layout_below="@+id/mapButton"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/mapButton"
            android:layout_alignStart="@+id/mapButton"
            android:textSize="14sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/radiusEdit"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp">

            <Button
                android:text="OK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/okButton"
                android:layout_weight="1"
                android:layout_below="@+id/draftAlertLabel"
                android:layout_alignLeft="@+id/launchButton"
                android:layout_alignStart="@+id/launchButton"
                android:onClick="onOkClick" />

            <Button
                android:text="Cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cancelButton"
                android:layout_weight="1"
                android:layout_alignBaseline="@+id/okButton"
                android:layout_alignBottom="@+id/okButton"
                android:layout_toRightOf="@+id/okButton"
                android:layout_toEndOf="@+id/okButton"
                android:onClick="onCancelClick" />

        </LinearLayout>

        <TextView
            android:text="Radius"
            android:layout_height="wrap_content"
            android:id="@+id/radiusLabel"
            android:textSize="14sp"
            android:gravity="left|center_vertical"
            android:layout_width="wrap_content"
            android:layout_alignBottom="@+id/radiusEdit"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/radiusEdit"
            android:layout_toStartOf="@+id/radiusEdit"
            android:layout_below="@+id/mapButton" />

    </RelativeLayout>

</ScrollView>
